div(class="d-flex flex-wrap gap-4" style="flex-direction: column;")
    div(class="profile-page" style="margin-left: 5vw;")
        div(class="" data-parallax='true' style="height: 120px;")
        div(class="" style="width: 80%; background-color: white")
            div(class="container" )
                div(class="row")
                    div(class="profile")
                        div(class="avatar-wrapper")
                            img(class="img-background" src=user["avatar"] alt='Circle Image')
                            h3(class="title mt-2" style="margin-left: 25%") #{user["name"]} #{user["surname"]}
                            div(class="d-flex flex-row gap-3 align-items-center" style='margin-left: 26%')
                                img(class="icon" src='/images/icons/birthday.svg' alt='' style='width:25px; height:25px;')
                                div(class="align-middle" style="margin-top: 18px;")
                                    p #{user["birthday"]}
                            div(class="d-flex flex-row gap-3 align-items-center" style='margin-left: 26%')
                                img(class="icon" src='/images/icons/email.svg' alt='' style='width:25px; height:27px;margin-bottom: 15px;')
                                div(class="align-middle")
                                    p #{user["email"]}
                            div(class="d-flex flex-row gap-3 align-items-center" style='margin-left: 26%')
                                img(class="icon" src='/images/icons/status.svg' alt='' style='width:25px; height:26px;')
                                select(class="form-select select-role" data-id=user["id"] aria-label="Default select example")
                                    option(value="Пользователь", selected=user["role"]==="Пользователь") Пользователь
                                    option(value="Администратор", selected=user["role"]==="Администратор") Администратор
                            div(class="d-flex flex-row gap-3 align-items-center" style='margin-left: 26%')
                                img(class="icon" src='/images/icons/settings.svg' alt='' style='width:25px; height:26px;')
                                select(class="form-select select-status" data-id=user["id"] aria-label="Default select example")
                                    option(value="Не подтверждён" , selected=user["status"] === "Не подтверждён") Не подтверждён
                                    option(value="Активный", selected=user["status"] === "Активный") Активный
                                    option(value="Заблокированный", selected=user["status"] === "Заблокированный") Заблокированный

    div(class="news-page" style="margin-left: 5vw; transform: translateY(-48px);")
        div(class="" style="width: 80%; background-color: white")
            div(class="container")
                div(class="row")
                    div(class="profile" style="margin-top: 10px; margin-bottom: 17px;")
                        div(class="list-group d-flex flex-row gap-4 sidebar-menu" style='margin:10px')
                            a(class='user-page-control px-4' id="photo-section" data-id=user["id"] data-section="photos" style="padding: 5px;")
                                div(class="d-flex flex-row gap-3 align-items-center")
                                    img(class="icon" src='/images/icons/photos.svg' alt='' style='width:22px; height:20px;')
                                    span(class="align-middle fs-5") Фото
                            a(class='user-page-control px-4' data-id=user["id"] data-section="notes" style="padding: 5px;")
                                div(class="d-flex flex-row gap-3 align-items-center")
                                    img(class="icon" src='/images/icons/notes.svg' alt='' style='width:23px; height:20px;')
                                    span(class="align-middle fs-5")  Посты
                            a(class='user-page-control px-4' data-id=user["id"] data-section="friends" style="padding: 5px;")
                                div(class="d-flex flex-row gap-3 align-items-center")
                                    img(class="icon" src='/images/icons/sidebar-users.svg' alt='' style='width:30px; height:20px;')
                                    span(class="align-middle fs-5")  Подписки
                            a(class='user-page-control px-4' data-id=user["id"] data-section="news" style="padding: 5px;")
                                div(class="d-flex flex-row gap-3 align-items-center")
                                    img(class="icon" src='/images/icons/home.svg' alt='' style='width:22px; height:20px;')
                                    span(class="align-middle fs-5")  Новости
    div(class="section section-dark" style="margin-right: auto; margin-left: 5vw;width: 75%;background-color: white; transform: translateY(-83px);")

