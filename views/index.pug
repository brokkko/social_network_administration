html
    div(class='main-container d-flex')
        div(class='sidebar' id="side_nav")
            include side-bar.pug
        div(class="content")
            if page === "users_list"
                include users-list.pug
                +users-list-include(users_array)
            if page === "user_page"
                include user-page.pug

